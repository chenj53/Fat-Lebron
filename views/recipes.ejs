<%- include('bootheader') -%>
<%- include('menubar') -%>
<h1> Recipes </h1>

<form method="post" action="/recipes">
  <div class="form-group">
    <label for="exampleFormControlInput1">Name of Dish</label>
    <input type="name" class="form-control" name="dishName" placeholder="Cookies">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Ingredients Needed</label>
    <input type="name" class="form-control" name="Ingredients" placeholder="Flour,Wheat,Chocolate Chips">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Example textarea</label>
    <textarea class="form-control" name="dishDescription" rows="3"></textarea>
  </div>
  <input class="btn btn-primary" type="submit" value="Submit">
</form>
<hr>
<form method="post" action="/recipesDelete">
        <input type="submit" value="delete marked">
        <ol>
        <% for(i = 0; i<posts.length; i++){  %>
            <li> <a href="/showPost/<%= posts[i]._id %>">
                  <%= posts[i].userName %></a>
                  <i>
                 <%= posts[i].createdAt %></\/i> <br>
                 <% console.dir([posts[i].userId,user._id]) %>
                 <% if (posts[i].userId.equals(user._id)) { %>
                     <input type="checkbox" name="delete" value="<%= posts[i]._id %>">
                 <% } %>
                 <pre><%= posts[i].post %></pre>

             </li>
        <% } %>
        </ol>

    </form>








